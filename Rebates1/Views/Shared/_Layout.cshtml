<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rebates </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rebates1.styles.css" asp-append-version="true" />
</head>

@{
    var FirstName = TempData["currentUserFirstname"];
    var Surname = TempData["currentUserSurname"];   
    var Role = TempData["currentRole"];
    var useremail = TempData["currentUserEmail"];

    TempData.Keep("currentUserFirstname");
    TempData.Keep("currentUserSurname");
    TempData.Keep("currentRole");
    TempData.Keep("currentUserEmail");

    var date = @DateTime.Now.ToString("yyyy");
}

<body>
    <header>
        <nav class="navbar navbar-nav navbar-expand-lg navbar-light" style="background-color:black;height:40px;"></nav>
        <nav class="navbar navbar-nav navbar-expand-lg navbar-light" style="background-color:#E6B000;font-weight:bold;margin-top:0%;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home"><img src="~/joburg_logo.png" height="60px" /></a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Statistics</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @{
                    var Surname = TempData["currentUserSurname"];
                    var FirstName = TempData["currentUserFirstname"];
                    var myroles = TempData["currentRole"];
                    var useremail = TempData["currentUserEmail"];

                    TempData.Keep("currentUserFirstname");
                    TempData.Keep("currentUserSurname");
                    TempData.Keep("currentRole");
                }

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                        
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Acknowledge" asp-action="Acknowledge">My Tasks</a>
                        </li>

                        @if(Role != null)
                        {
                            @if (Role.ToString() == "Director")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Acknowledge" asp-action="PBOAcknowledge">PBO Applications</a>
                                </li>
                            }
                        }                        
                        
                    </ul>

                    <p class="nav text-dark" >Hello, @FirstName @Surname</p>

                    @*<p class="nav navbar-text">Hello, @User.Identity?.Name!</p>*@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>

<script asp-append-version="true" src="~/lib/jquery/dist/jquery.min.js"></script>
<script asp-append-version="true" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script asp-append-version="true" src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<link rel="stylesheet" asp-append-version="true" href="~/css/datatable_1.12_min.css" />
<link rel="stylesheet" asp-append-version="true" href="~/css/datatable_2.2.3_min.css" />
<script asp-append-version="true" src="~/js/jquery-3.5.1.js" asp-append-version="true"></script>
<script asp-append-version="true" src="~/js/jquery.dataTables.min.js" asp-append-version="true"></script>
<script asp-append-version="true" src="~/js/dataTables.buttons.min.js" asp-append-version="true"></script>
<script asp-append-version="true" src="~/js/jszip.min.js" asp-append-version="true"></script>
<script asp-append-version="true" src="~/js/pdfmake.min.js" asp-append-version="true"></script>
<script asp-append-version="true" src="~/js/vfs_fonts.js" asp-append-version="true"></script>
<script asp-append-version="true" src="~/js/buttons.html5.min.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

<footer class="border-top text-muted" style="position:absolute; bottom:0; width:100%;">
        <div class="container pb-3">
            <br />
                &copy; @date - Rebates @*- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
            <br />
        </div>
 </footer>

